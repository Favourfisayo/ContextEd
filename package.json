{
  "name": "studyRAG",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "test": "turbo -F server test:coverage",
    "check-types": "turbo check-types",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "dev:server": "turbo -F server dev",
    "db:push": "turbo -F @studyRAG/db db:push",
    "db:studio": "turbo -F @studyRAG/db db:studio",
    "db:generate": "turbo -F @studyRAG/db db:generate",
    "db:migrate": "turbo -F @studyRAG/db db:migrate",
    "db:reset": "turbo -F @studyRAG/db db:reset"
  },
  "dependencies": {
    "dotenv": "^17.2.2",
    "pg": "^8.16.3",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@types/node": "^22.13.11",
    "@types/pg": "^8.15.6",
    "tsdown": "^0.15.5",
    "turbo": "^2.5.4"
  },
  "packageManager": "pnpm@10.23.0"
}
