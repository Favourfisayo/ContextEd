{
  "name": "@studyRAG/db",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./src/index.ts"
    },
    "./*": {
      "types": "./dist/*.d.ts",
      "default": "./src/*.ts"
    }
  },
  "scripts": {
    "build": "tsdown",
    "lint": "eslint . --ext .ts,.tsx",
    "check-types": "tsc -b",
    "postinstall": "prisma generate --schema=./prisma/schema/schema.prisma",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev"
  },
  "devDependencies": {
    "@studyrag/eslint-config": "workspace:*",
    "eslint": "^9.39.1",
    "prisma": "^7.0.1",
    "tsdown": "catalog:"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@prisma/adapter-pg": "^7.0.1",
    "@prisma/adapter-ppg": "^7.0.1",
    "@prisma/client": "catalog:",
    "@prisma/client-runtime-utils": "7.0.1",
    "@prisma/extension-accelerate": "^2.0.2",
    "dotenv": "catalog:",
    "zod": "catalog:"
  }
}
