{
	"$schema": "https://turbo.build/schema.json",
	"ui": "tui",
	"globalEnv": ["DATABASE_URL", "NODE_ENV"],
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"inputs": ["$TURBO_DEFAULT$", ".env*"],
			"outputs": ["dist/**", ".next/**"]
		},
		"check-types": {
			"dependsOn": ["^build"],
			"outputs": []
		},
		"lint": {
			"dependsOn": ["^build"],
			"outputs": [],
			"cache": false
		},
		"test": {
			"dependsOn": ["^build"],
			"outputs": ["coverage/**"],
			"cache": false
		},
        "test:coverage": {
            "dependsOn": ["^build"],
            "outputs": ["coverage/**"],
			"cache": false
        },
		"dev": {
			"cache": false,
			"persistent": true
		},
		"db:push": {
			"cache": false,
			"persistent": true
		},
		"db:studio": {
			"cache": false,
			"persistent": true
		},
		"db:migrate": {
			"cache": false,
			"persistent": true
		},
		"db:generate": {
			"cache": false,
			"persistent": true
		},
		"postinstall": {
			"dependsOn": ["^postinstall"],
			"outputs": []
		}
	}
}
